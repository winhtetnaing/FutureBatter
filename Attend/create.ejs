<div class="jumbotron text-center">
    <h1>Create Attend</h1>
</div>
<div class="container">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
                   
            <form action="/users/create" method="POST">

                 <div class="form-group">
                    <label>Event List</label>
                     <div class="form-check form-check-inline">
                      <% events.map(item=> { %>
                        <input class="form-check-input" type="radio" name="eventshow" id="<%= item._id %>" value="<%= item._id %>"
                        <label class="form-check-label" for="inlineRadio1"><%= item.name %></label>
                           <% }) %>
                    </div>
                </div>

                <div class="form-group">
                    <label>Remark</label>
                    <select id="user" name="user" class="form-control">
                        <option id="0"> Please choose a user </option>
                            <% users.map(item=> { %>
                                <option id="<%= item._id%>"> <%= item.usrname %> </option>
                            <% }) %>
                    <select>                    
                </div>

           

               
            </form>
        </div>
    </div>
</div>